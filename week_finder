                                              //    FIND WEEKS USING SWITCH STATEMENT    //   
  
#include<iostream>
using namespace std;
int main(){
    char weeknumber;
    cout<<"enter the weeknumber(1,2,3,4,5,6,7):";
    cin>>weeknumber;

    switch(weeknumber){
       case '1':
        cout<<"sunday"<<endl;
        break;

        case '2':
        cout<<"monday"<<endl;
        break;

        case '3':
        cout<<"tuesday"<<endl;
        break;

        case '4':
        cout<<"wednesday"<<endl;
        break;

        case '5':
        cout<<"thursaday"<<endl;
        break;

        case '6':
        cout<<"friday"<<endl;
        break;

        case '7':
        cout<<"saturday"<<endl;
        break;


        default:
        cout<< "enter valid week number."<<endl;
        break; 
    }
    cout<<"thank you";
    return 0;
}  
